
<%= link_to 'New Post', new_status_path %>

<table class="table">
    <thead>
      <tr>
      <b><th>User</th></b>
      <th>Status Updates</th>
      <th>Like Counter</th>
      <th>Like it!</th>
      <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @statuses.each do |status| %>
      <tr>
        <td><%= status.user %></td>
        <td><%= status.status %></td>
        <td><%= status.likes %> </td>
        <td><%= button_to "Like", counter_count_path(status) %></td>
        <td><%= link_to 'Edit', edit_status_path(status) %></td>
        <td><%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure?' }  %></td>

      <% end %>
    </tbody>
  </table>
